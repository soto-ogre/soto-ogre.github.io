    script.
      function toggleNav() {
      var body = document.body;
      var navBtn = $('.nav_btn')[0];
      var blackBg = $('.nav_bg')[0];
      var cartLink = $('.cart_link')
      $(navBtn).on('click', function() {
      $(body).toggleClass('nav_open');
      });
      $(cartLink).on('click', function() {
      $(body).toggleClass('cart_open');
      });
      $('.js-modal-open').on('click', function() {
      $(body).toggleClass('modal_show');
      });
      $(blackBg).on('click', function() {
      $(body).removeClass('nav_open')
      .removeClass('cart_open');
      });
      $(blackBg).on('click', function() {
      $('.js-modal').fadeOut();
      $(body).removeClass('modal_show');
      });
      }
      toggleNav();
      $(function () {
      $('.product_container').hover(function() {
      $(this).find('li').slideDown(300);
      }, function(){
      $(this).find('li').slideUp(300);
      });
      $('.contents__main_container').on('click', function() {
      $(this).find('li').slideUp(300);
      });
      $('.js-modal-open').on('click',function(){
      $('.js-modal').fadeIn();
      return false;
      });
      $('.js-modal-close').on('click',function(){
        $('.js-modal').fadeOut();
        $(document.body).removeClass('modal_show');
      return false;
      });
      });
