    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    #app
      p {{ message }}
      button( v-on:click="reverseMessage") メッセージ反転

    
    script.
      new Vue({
        el: '#app',
        data: {
          message: 'HelloWorld!'
        },
        methods: {
          reverseMessage: function() {
            this.message = this.message.split('').reverse().join('')
          }
        }
      })